separator_block_width=15

[volume-pulseaudio]
command=$SCRIPT_DIR/i3blocks-contrib/$BLOCK_NAME/$BLOCK_NAME
interval=once
signal=1

[ip]
command=echo \[$(ip -json route get 8.8.8.8 | jq -r '.[].prefsrc')\] $(hostname)@$(whoami)
interval=once
color=#91E78B

[disk]
command=$SCRIPT_DIR/i3blocks-contrib/$BLOCK_NAME/$BLOCK_NAME
label=HOME---
interval=30
separator=false

[memory]
command=$SCRIPT_DIR/i3blocks-contrib/$BLOCK_NAME/$BLOCK_NAME
label=MEM---
interval=30
separator=false

[cpu_usage]
command=$SCRIPT_DIR/i3blocks-contrib/$BLOCK_NAME/$BLOCK_NAME
label=CPU---
interval=10
min_width=CPU---100.00%

[keyindicator]
